<%= form_for([@user, @group], :html => {:class => "form"}, :data => {:remote => true}) do |f| %>
    <% if @group.errors.any? %>
        <div class="alert alert-danger">
          <% @group.errors.full_messages.each do |message| %>
              <%= message %>
          <% end %>
        </div>
    <% end %>

    <% if @group.errors.any? %>
        <div class="form-group has-error">
    <% else %>
        <div class="form-group">
    <% end %>
    <%= f.label :name, :class => "sr-only" %>
    <%= f.text_field :name, :class => "form-control", :placeholder => "Bezeichnung der Klasse"%>
    </div>
    <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
      <button type="button" class="btn btn-default" onclick="cancelForm()">Abbrechen</button>
    </div>
<% end %>

<script>
    function cancelForm() {
        $('#newGroup').html("<%= escape_javascript(link_to(raw("<div class='btn btn-default groupButton'>Neue Klasse anlegen</div>"), new_user_group_path(@user), :data => {:remote => true})) %>");
    }
</script>