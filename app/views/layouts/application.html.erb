<!DOCTYPE html>
<html>
  <head>
    <title>Levumi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>

    <!-- sonstige Libaries -->
    <%= javascript_include_tag 'sjcl.js' unless @no_script %>
    <%= render 'layouts/scripts' unless @no_script%>

    <%= yield :head if content_for? :head %>
  </head>

  <body>
  <!-- Platz für Navbar -->
  <% if content_for? :navbar %>
    <%= yield :navbar %>
  <% else %>
    <%= render 'layouts/navbar' %>
  <% end %>

  <!-- Hauptinhalt der Seite -->
  <%= content_for?(:body) ? yield(:body) : yield %>

  <!-- Platz für Dialoge etc -->
  <div id='modal' class='modal fade' tabindex='-1'>
    <div class='modal-dialog'>
      <div class='modal-content'>
        <% if content_for? :modal %>
          <%= yield :modal %>
        <% else %>
          <div class='modal-body' id='modal-body'>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= render 'application/imprint' %>
  <%= render 'application/privacy' %>
  <%= render 'application/about' %>

  <div id='t_and_c' class='modal fade' tabindex='-1'>
    <div class='modal-dialog modal-dialog-scrollable modal-lg'>
      <div class='modal-content'>
        <div class='modal-header'>
          <h5 class='modal-title'>Nutzungsbedingungen</h5>
          <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
            <span aria-hidden='true'>&times;</span>
          </button>
        </div>
        <div class='modal-body'>
          <%= render 'application/terms_and_conditions' %>
        </div>
      </div>
    </div>
  </div>


  </body>
</html>
