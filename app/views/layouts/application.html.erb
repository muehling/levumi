<!DOCTYPE html>
<html lang="de">
  <head>
    <title>Levumi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= vite_javascript_tag 'application' %>
    <%= vite_stylesheet_tag 'application' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8"/>
    <meta name="description" content="Levumi unterstützt Regelschullehrkräfte und speziell sonderpädagogische Lehrkräfte bei der Diagnose und Förderung sowohl auf individueller Basis wie auch für gesamte Klassen.">
    <meta name="keywords" content="levumi, lernverlaufsdiagnostik, sonderpädagogik">

    <%= yield :head if content_for? :head %>
    <%= vite_client_tag %>

    <%= favicon_link_tag 'favicon.ico', rel: 'shortcut icon', type: 'image/x-icon' %>
    <%= favicon_link_tag 'apple-touch-icon.png', rel: 'apple-touch-icon' %>
    <%= favicon_link_tag 'apple-touch-icon-57x57.png', rel: 'apple-touch-icon', sizes: '57x57' %>
    <%= favicon_link_tag 'apple-touch-icon-72x72.png', rel: 'apple-touch-icon', sizes: '72x72' %>
    <%= favicon_link_tag 'apple-touch-icon-76x76.png', rel: 'apple-touch-icon', sizes: '76x76' %>
    <%= favicon_link_tag 'apple-touch-icon-114x114.png', rel: 'apple-touch-icon', sizes: '114x114' %>
    <%= favicon_link_tag 'apple-touch-icon-120x120.png', rel: 'apple-touch-icon', sizes: '120x120' %>
    <%= favicon_link_tag 'apple-touch-icon-144x144.png', rel: 'apple-touch-icon', sizes: '144x144' %>
    <%= favicon_link_tag 'apple-touch-icon-152x152.png', rel: 'apple-touch-icon', sizes: '152x152' %>
    <%= favicon_link_tag 'apple-touch-icon-180x180.png', rel: 'apple-touch-icon', sizes: '180x180' %>
    <%= favicon_link_tag 'apple-touch-icon-precomposed.png', rel: 'apple-touch-icon' %>
    <%= favicon_link_tag 'apple-touch-icon-57x57-precomposed.png', rel: 'apple-touch-icon', sizes: '57x57' %>
    <%= favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', rel: 'apple-touch-icon', sizes: '72x72' %>
    <%= favicon_link_tag 'apple-touch-icon-76x76-precomposed.png', rel: 'apple-touch-icon', sizes: '76x76' %>
    <%= favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', rel: 'apple-touch-icon', sizes: '114x114' %>
    <%= favicon_link_tag 'apple-touch-icon-120x120-precomposed.png', rel: 'apple-touch-icon', sizes: '120x120' %>
    <%= favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', rel: 'apple-touch-icon', sizes: '144x144' %>
    <%= favicon_link_tag 'apple-touch-icon-152x152-precomposed.png', rel: 'apple-touch-icon', sizes: '152x152' %>
    <%= favicon_link_tag 'apple-touch-icon-180x180-precomposed.png', rel: 'apple-touch-icon', sizes: '180x180' %>
    
  </head>

  <body>
  <!-- Platz für Navbar -->
  <% if content_for? :navbar %>
    <%= yield :navbar %>
  <% end %>

  <!-- Hauptinhalt der Seite -->
  <%= content_for?(:body) ? yield(:body) : yield %>

  <!-- Platz für Dialoge etc -->
  <div id='modal' class='modal fade' tabindex='-1'>
    <div class='modal-dialog'>
      <div class='modal-content'>
        <% if content_for? :modal %>
          <%= yield :modal %>
        <% else %>
          <div class='modal-body' id='modal-body'>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div id='toast-wrapper'>
    <div id='user-messages' role='alert' class='toast mt-4'>
      <div class='toast-header d-flex justify-content-between align-items-center'>
        <h5 class='text-secondary'>Registrierung</h5>
        <button type='button' class='close' data-dismiss='toast' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>
      <div class='toast-body' id='user-messages-body'></div>
    </div>
  </div>

  <%= render 'application/imprint' %>
  <%= render 'application/privacy' %>
  <%= render 'application/about' %>

  <div id='t_and_c' class='modal fade' tabindex='-1'>
    <div class='modal-dialog modal-dialog-scrollable modal-lg'>
      <div class='modal-content'>
        <div class='modal-header'>
          <h5 class='modal-title'>Nutzungsbedingungen</h5>
          <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
            <span aria-hidden='true'>&times;</span>
          </button>
        </div>
        <div class='modal-body'>
          <%= render 'application/terms_and_conditions' %>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script>
    if (window.location.search === '?logout=true'){
      sessionStorage.removeItem('login')
    }
  </script>
</html>
