<div id="t<%= test.id %>">
  <p class="lead">Beschreibung</p>
  <p>
    <%= raw(test.info) %>
  </p>
  <p class="lead">Testdurchführung</p>
  <p>
  <table class="table">
    <tr>
      <td>
        Art
      </td>
      <td>
        <%= test.type_info %>
      </td>
    </tr>
    <tr>
      <td>
        Länge des Tests
      </td>
      <td>
        <%= test.len_info %>
      </td>
    </tr>
    <tr>
      <td>
        Größe des Itempools
      </td>
      <td>
        <%= test.items.count %>
      </td>
    </tr>
  </table>
  </p>
  <p class="lead">Items</p>
  <p>
    <% first = true %>
    <% test.items.each do |i| %>
        <% unless first %>
            <%= "," %>
        <% end %>
        <% first = false %>
        <%= i.shorthand %>
    <% end %>
  </p>
</div>
